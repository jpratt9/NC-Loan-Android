<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/offerItemUserImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/account"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/offerItemUserImage"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/offerItemRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$500 - $600"
            android:textColor="@color/material_color_black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/offerItemAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/offerItemRange"
            android:text=" \@ "
            android:textColor="@color/material_color_black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/offerItemInterest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/offerItemAt"
            android:text="2.6%"
            android:textColor="@color/material_color_black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/offerItemPeriod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offerItemRange"
            android:text="3 months"
            android:textSize="16dp" />
    </RelativeLayout>
</RelativeLayout>